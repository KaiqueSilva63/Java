import java.util.Scanner;
/*Lê um inteiro, calcular seu triplo e mostra seu antecessor e sucessor, seguido individualmente de antecessor e sucessor.*/
public class Main{
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int n1 = scanner.nextInt();
		
		System.out.println("A soma é " +((n1 * 3)+ 1 +((n1 * 2)- 1)));
		System.out.println("\nAntecessor: " + ((n1 * 2 )- 1));
		System.out.println("\nSucessor: " + ((n1* 3 )+ 1));
	}
}
