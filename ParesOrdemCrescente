import java.util.Scanner;
public class Main{
	public static void main(String[] args) {
	   int n , i = 0;
	   Scanner scanner = new Scanner(System.in);
	   System.out.print(" Digite um valor: ");
	   n = scanner.nextInt();
	   
	    if (n % 2 == 0 ){
	       System.out.print("Este numero e par: " + n);
	       
	        while(n >= i){
	     System.out.print(i);
	     
	   }
	     }
	}
}
